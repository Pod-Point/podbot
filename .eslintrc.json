{
    "parser": "typescript-eslint-parser",
    "extends": "@pod-point/eslint-config-podpoint-base",
    "env":{
        "node": true
    },
    "rules": {
        "max-len": [2, 120],
        "indent": [2, 4, { "SwitchCase": 1, "VariableDeclarator": 1, "outerIIFEBody": 1 }],
        "arrow-parens": [2, "as-needed"]
    },
    "resolve": {
        "extensions": ["", ".js", ".ts"]
    }
}
